//求两个数的较大值（用函数） 
int Max(int x,int y)//定义一个比较大小的函数 并且定义两个变量，x，y 
{
if(x>y)// 使用判断函数，当x大于y时 
return x;//回代x即可，也就是返回x的值 
else//如果是其他，也就是y大于等于x 
return y;//回代y的值 
}
int main()//主函数 
{
	int num1=0;//定义两个整形变量，并让他们的初始值为0 
	int num2=0;
	int max=0;//定义一个要调用自定义函数的变量，使他的初始值为0. 
	scanf("%d%d",&num1,&num2);//定义一个输入函数scanf，目的是为了能输入两个变量进行比较 
	max=Max(num1,num2);//调用自定义函数Max 
	printf("max=%d\n",max);打印变量max的值 
	return 0;
 }  
